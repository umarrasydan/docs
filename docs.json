{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Xendit Documentation",
  "colors": {
    "primary": "#1662EE",
    "light": "#03CF99",
    "dark": "#1662EE"
  },
  "favicon": "/xendit-favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["index", "guides/getting-started/quickstart"]
          },
          {
            "group": "Migration",
            "pages": ["guides/migration/xen-bri-to-terminal-gateway"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Terminal API",
            "openapi": "openapi-spec.yaml",
            "pages": [
              "api-reference/terminal-api/introduction",
              "api-reference/terminal-api/concepts",
              "POST /v1/terminal/sessions",
              "GET /v1/terminal/sessions/{id}",
              "GET /v1/terminal/payments/{id}",
              "POST /v1/terminal/payments/{id}/void",
              "POST /v1/terminal/commands",
              "api-reference/terminal-api/callbacks",
              "api-reference/terminal-api/errors"
            ]
          },
          {
            "group": "Terminal Gateway",
            "pages": [
              "api-reference/terminal-gateway/introduction",
              "api-reference/terminal-gateway/app-configuration",
              "api-reference/terminal-gateway/android-sdk/index",
              "api-reference/terminal-gateway/ios-sdk/index",
              {
                "group": "Client-to-Client",
                "openapi": "openapi-spec-c2c.yaml",
                "pages": [
                  "api-reference/terminal-gateway/client-to-client",
                  "POST /commands/pay",
                  "POST /commands/cancel",
                  "POST /commands/receipt",
                  "POST /commands/settlement",
                  "POST /commands/histories"
                ]
              }
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://docs.xendit.co",
          "icon": "/xendit-favicon.ico"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:inpersonpayments@xendit.co"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.xendit.co"
    }
  },
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "php", "java", "go", "python", "javascript", "ruby"],
      "defaults": "all"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/xendit",
      "github": "https://github.com/xendit",
      "linkedin": "https://linkedin.com/company/xendit"
    }
  }
}
